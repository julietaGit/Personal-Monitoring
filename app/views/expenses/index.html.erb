<p id="notice"><%= notice %></p>

<h1>Expenses</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Details</th>
          <th>Date</th>
          <th>Amount</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @expenses.each do |expense| %>
          <tr>
            <td><%= expense.details %></td>
            <td><%= expense.date %></td>
            <td><%= expense.amount %></td>
            <td><%= link_to 'Show', expense, class: "btn btn-default" %></td>
            <td><%= link_to 'Edit', edit_expense_path(expense), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', expense, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

