<!DOCTYPE html>
<html>
  <head>
    <title>Pmonitoring</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="container">
      <ul class="nav nav-tabs">
        <li><%= link_to "Home", personalmonitoring_index_path %></li>
        <li><%= link_to "About Us", personalmonitoring_about_path %></li>
        <li><%= link_to "Articles", personalmonitoring_article_path %></li>
        <li><%= link_to "Contact Us", personalmonitoring_contact_path %></li>

        <% if current_user %>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <div class='btn-group pull-right right-nav'>
            <button type="button" class="btn btn-mini dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
              <span class="dropdown-toggle" data-toggle="dropdown">Admin</span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Job Applications", joblists_path %></li>
              <li><%= link_to "Projects", projects_path %></li>
              <li><%= link_to "Expenses", expenses_path %></li>
              <li><%= link_to "Plans", plans_path %></li>
            </ul>
          </div>
        <% else %>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <li><%= link_to "Sign In", new_user_session_path %></li>
        <% end %>
      </ul>
      <br>

      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
          <% elsif flash[:error] %>
        <div class="alert alert-error">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:error] %>
        </div>
          <% elsif flash[:alert] %>
        <div class="alert">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>



      <%= yield %>

    </div>
  </body>
</html>
