<div class="row"><!-- start Search Box -->
  <h1>Plans</h1>
  <div class="pull-right range-query">
    <%= form_tag plans_path, method: :get do %>
      <%= text_field_tag 'search[date_from]', @search.date_from %>
      <%= text_field_tag 'search[date_to]', @search.date_to %>
      <%= submit_tag 'Search', class: 'btn search-button' %>
    <% end %>
  </div>
</div><!-- end Search Box -->

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Your Plan</th>
          <th>Place</th>
          <th>Date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @plans.each do |plan| %>
          <tr>
            <td><%= plan.yourplan %></td>
            <td><%= plan.place %></td>
            <td><%= plan.date %></td>
            <td><%= link_to 'Show', plan, class: "btn btn-default" %></td>
            <td><%= link_to 'Edit', edit_plan_path(plan), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', plan, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

