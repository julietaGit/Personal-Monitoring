<!DOCTYPE html>
<html>
  <head>
    <title>Pmonitoring</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!--<p id="notice"><%= notice %></p>-->
  <div class="container">

    <h2 class="mt-4">Projects</h2>
  <div class="row"><!-- start Search Box -->
    <div class="pull-right range-query">
      <%= form_tag projects_path, method: :get do %>
        <%= text_field_tag 'search[start_from]', @search.start_from %>
        <%= text_field_tag 'search[start_to]', @search.start_to %>
        <%= submit_tag 'Search', class: 'btn search-button' %>
      <% end %>
    </div>
  </div><!-- end Search Box -->

  <div class="media">
    <div class="media-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Pname</th>
            <th>Start</th>
            <th>Completed</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.pname %></td>
              <td><%= project.start %></td>
              <td><%= project.completed %></td>
              <td><%= link_to 'Show', project, class: "btn btn-default" %></td>
              <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-mini btn-success' %></td>
              <td><%= link_to 'Destroy', project, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

  <%= link_to 'New Project', new_project_path %>
  
</body>
</html>
